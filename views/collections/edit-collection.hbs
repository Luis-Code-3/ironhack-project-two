<h2>Edit Collection Details:</h2>


<form action="/collection/{{_id}}/edit-details" method="post">

    <label for="">Name:</label>
    <input type="text" name="collectionName" value="{{collectionName}}">

    <label for="">Description:</label>
    <input type="text" name="description" value="{{description}}">

    <label for="">Logo:</label>
    <input type="text" name="logoUrl" value="{{logoUrl}}">

    <label for="">Background Header:</label>
    <input type="text" name="backgroundHeader" value="{{backgroundHeader}}">

    <button type="submit">Save</button>

</form>